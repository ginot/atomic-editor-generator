    "texts": [
      {
        "id": "text_intro",
        "subatom": "Text",
        "config": {
          "tag": "p",
          "content": "El Barcelona Culinary Hub es la Escuela Superior de Gastronomía con foco en management y visión de negocio aplicada a la restauración."
        },
        "styles": {
          "fontSize": "var(--font-size-body)",
          "textAlign": "center",
          "maxWidth": "800px",
          "margin": "0 auto var(--spacing-lg)"
        }
      },
      {
        "id": "text_value_formacion",
        "subatom": "Text",
        "config": {
          "tag": "p",
          "content": "Formación en Management Culinario"
        },
        "styles": {
          "textAlign": "center",
          "marginTop": "var(--spacing-sm)"
        }
      },
      {
        "id": "text_value_proyeccion",
        "subatom": "Text",
        "config": {
          "tag": "p",
          "content": "Proyección Internacional"
        },
        "styles": {
          "textAlign": "center",
          "marginTop": "var(--spacing-sm)"
        }
      },
      {
        "id": "text_value_expertos",
        "subatom": "Text",
        "config": {
          "tag": "p",
          "content": "Expertos del sector"
        },
        "styles": {
          "textAlign": "center",
          "marginTop": "var(--spacing-sm)"
        }
      },
      {
        "id": "text_value_campus",
        "subatom": "Text",
        "config": {
          "tag": "p",
          "content": "HUB GASTRONÓMICO"
        },
        "styles": {
          "textAlign": "center",
          "marginTop": "var(--spacing-sm)",
          "fontWeight": "700"
        }
      },
      {
        "id": "quote_1",
        "subatom": "Text",
        "config": {
          "tag": "blockquote",
          "content": "\"Una receta no tiene alma. Tú, como cocinero, debes traer alma a la receta.\" - Thomas Keller"
        },
        "styles": {
          "fontSize": "var(--font-size-h3)",
          "textAlign": "center",
          "fontStyle": "italic",
          "padding": "var(--spacing-xl)"
        }
      },
      {
        "id": "quote_2",
        "subatom": "Text",
        "config": {
          "tag": "blockquote",
          "content": "\"Un buen chef tiene que ser un gerente, un hombre de negocios y un gran cocinero.\" - Wolfgang Puck"
        },
        "styles": {
          "fontSize": "var(--font-size-h3)",
          "textAlign": "center",
          "fontStyle": "italic",
          "padding": "var(--spacing-xl)"
        }
      },
      {
        "id": "quote_3",
        "subatom": "Text",
        "config": {
          "tag": "blockquote",
          "content": "\"Haz lo que haces tan bien, que tus clientes querrán volver con sus amigos para verlo otra vez.\" – Walt Disney"
        },
        "styles": {
          "fontSize": "var(--font-size-h3)",
          "textAlign": "center",
          "fontStyle": "italic",
          "padding": "var(--spacing-xl)"
        }
      },
      {
        "id": "footer_text_copyright",
        "subatom": "Text",
        "config": {
          "tag": "p",
          "content": "© Barcelona Culinary Hub. Planeta Formación y Universidades. Todos los derechos reservados."
        },
        "styles": {
          "textAlign": "center",
          "fontSize": "var(--font-size-small)",
          "marginTop": "var(--spacing-lg)"
        }
      }
    ],
    "links": [
      {
        "id": "link_home",
        "subatom": "Link",
        "config": {
          "href": "https://www.barcelonaculinaryhub.com/",
          "target": "_self",
          "ariaLabel": "Ir a la página principal"
        }
      }
    ],
    "buttons": [
      {
        "id": "btn_search",
        "subatom": "Button",
        "config": {
          "type": "button",
          "content": "Buscar"
        },
        "styles": {
          "backgroundColor": "transparent",
          "border": "1px solid var(--color-text)",
          "padding": "var(--spacing-sm) var(--spacing-md)",
          "cursor": "pointer"
        }
      }
    ]
  },
  "molecules": [
    {
      "id": "logo_link",
      "type": "logo_header",
      "atoms": {
        "image": "logo_main",
        "link": "link_home"
      }
    },
    {
      "id": "value_card_1",
      "type": "value_card",
      "atoms": {
        "icon": "icon_formacion",
        "text": "text_value_formacion"
      },
      "styles": {
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "padding": "var(--spacing-lg)"
      }
    },
    {
      "id": "value_card_2",
      "type": "value_card",
      "atoms": {
        "icon": "icon_proyeccion",
        "text": "text_value_proyeccion"
      },
      "styles": {
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "padding": "var(--spacing-lg)"
      }
    },
    {
      "id": "value_card_3",
      "type": "value_card",
      "atoms": {
        "icon": "icon_expertos",
        "text": "text_value_expertos"
      },
      "styles": {
        "display": "flex",
        "flexDirection": "column",
        "alignItems": "center",
        "padding": "var(--spacing-lg)"
