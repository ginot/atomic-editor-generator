        "fontSizes": {
          "h1": "clamp(2rem, 5vw, 4rem)",
          "h2": "clamp(1.5rem, 3vw, 2.5rem)",
          "h3": "clamp(1.25rem, 2vw, 1.75rem)",
          "body": "1rem",
          "small": "0.875rem"
        }
      },
      "spacing": {
        "xs": "0.25rem",
        "sm": "0.5rem",
        "md": "1rem",
        "lg": "2rem",
        "xl": "4rem",
        "xxl": "6rem"
      }
    },
    "thirdParty": {
      "fonts": {
        "google": [
          "https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap",
          "https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap"
        ]
      }
    }
  },
  "page": {
    "id": "homepage",
    "route": "/",
    "title": "Escuela de Cocina y Gastronomía | Barcelona Culinary Hub",
    "meta": {
      "description": "Escuela Superior de Gastronomía en Barcelona. Másters, Grado y Formación Profesional en Alta Cocina.",
      "language": "es"
    },
    "layout": "default_layout"
  },
  "layout": {
    "id": "default_layout",
    "structure": [
      {
        "organism": "main_header"
      },
      {
        "organisms": [
