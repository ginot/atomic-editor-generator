{
  "project": {
    "id": "barcelonaculinaryhub",
    "name": "Barcelona Culinary Hub",
    "version": "1.0.0",
    "brand": {
      "colors": {
        "primary": "#1a1a1a",
        "secondary": "#d4af37",
        "accent": "#8b0000",
        "text": "#333333",
        "textLight": "#ffffff",
        "background": "#ffffff",
        "backgroundDark": "#f5f5f5"
